// app/dashboard/layout.tsx
"use client"

import type React from "react"
import AppSidebar from "@/components/app-sidebar"
import { SidebarInset, SidebarProvider } from "@/components/ui/sidebar"

export default function DashboardLayout({ children }: { children: React.ReactNode }) {
return (
  <SidebarProvider defaultOpen className="h-svh w-full overflow-hidden">
    {/* Fixed sidebar handled internally by shadcn/ui */}
    <AppSidebar />
    {/* Main content scrolls independently */}
    <SidebarInset className="flex h-svh flex-1 flex-col bg-background overflow-hidden">
      {/* Optional sticky header could go here */}
      <div className="flex-1 min-h-0 overflow-y-auto">
        <div className="p-4 md:p-6">{children}</div>
      </div>
    </SidebarInset>
  </SidebarProvider>
)
}
